<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.cordovarecordvoice" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CordovaVueMap</name>
    <description>
        A cordova sample to record voice on android and iOS
    </description>
    <author email="davidverriere+cheesecode@gmail.com" href="http://cheesecode.fr">
        Cheesecode Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="scripts/vueify-build.js" type="before_compile" />
    <engine name="android" spec="~5.2.2" />
</widget>
